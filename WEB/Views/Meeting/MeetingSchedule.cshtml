                    if ("@Model.mhyrc_url".indexOf("http") < 0 && "@Model.mhyrc_url".indexOf("https") < 0) {
                        layer.open({ content: "会议日程地址不正确" });
                    } else {
                        $("#objf").attr("src", '@Model.mhyrc_url');
                    }
